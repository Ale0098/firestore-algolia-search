{
  "name": "firestore-algolia-search",
  "version": "0.5.16",
  "description": "Index Cloud Firestore collection to Algolia",
  "scripts": {
    "build": "npm run clean && npm test && npm run compile",
    "clean": "rimraf lib",
    "compile": "tsc",
    "import": "node cli.js",
    "lint": "pretty-quick --staged && lint-staged",
    "prepare": "npm run build",
    "test": "jest --coverage"
  },
  "bin": "cli.js",
  "hooks": {
    "pre-commit": "npm run lint"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@algolia/client-common": "^4.14.3",
    "@algolia/transporter": "^4.14.3",
    "algoliasearch": "^4.14.3",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^3.24.1",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.0",
    "@types/jest": "^27.5.1",
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-functions-test": "^2.0.1",
    "jest": "^27.5.1",
    "jest-mock": "^29.3.1",
    "mocked-env": "^1.3.5",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=15.0.0"
  }
}
